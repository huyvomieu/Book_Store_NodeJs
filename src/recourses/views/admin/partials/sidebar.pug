link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")

.container-fluid
    //- div #{user}
    //- div #{role}
    .row
        .col-auto.min-vh-100.bg-dark
            .pt-4.pb-1.px-2
                a(href="" class= "text-white text-decoration-none") 

            hr(class= "text-white")
            ul(class="nav nav-pills flex-column mb-auto")
                li(class="nav-item" )
                    a(href= "/admin" class= "nav-link text-white" dashboard)
                        i(class= "ti-home me-2")
                        span(class= "d-small-inline" dashboard) Trang chủ
                    if(role.permissions.includes('product-view'))
                        a(href= "/admin/product" class= "nav-link text-white" product)
                            i(class= "ti-bookmark-alt me-2")
                            span(class= "d-small-inline") Sản phẩm
                    if(role.permissions.includes('productCategory-view'))
                        a(href= "/admin/productCategory" class= "nav-link text-white" category)
                            i(class= "ti-menu-alt me-2")
                            span(class= "d-small-inline") Danh mục
                    if(user.role_id == "66e87f416700b3f4b330458b")
                        a(href= "/admin/role" class= "nav-link text-white" role)
                            i(class= "ti-lock me-2")
                            span(class= "d-small-inline") Nhóm quyền
                    if(user.role_id == "66e87f416700b3f4b330458b")
                        a(href= "/admin/role/permissions" class= "nav-link text-white" permissions)
                            i(class= "ti-bar-chart me-2")
                            span(class= "d-small-inline") Phân quyền
                    if(role.permissions.includes('account-view'))
                        a(href= "/admin/account" class= "nav-link text-white" accounts)
                            i(class= "ti-user me-2")
                            span(class= "d-small-inline") Tài khoản
                    a(href= "/admin/settings" class= "nav-link text-white" settings)
                        i(class= "ti-settings me-2")
                        span(class= "d-small-inline") Cài đặt
