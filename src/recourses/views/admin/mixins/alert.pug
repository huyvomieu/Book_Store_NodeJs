mixin alert-success(time) 
    - if (messages.success)
                div(
                    class = "alert alert-success"
                    data-time = time,
                    show-alert
                )
                    span= messages.success
mixin alert-error(time) 
    - if (messages.error)
                div(
                    class = "alert alert-danger"
                    data-time = time,
                    show-alert
                )
                    span= messages.error

mixin alert-empty(count)
    - if (count < 1)
        h1 Danh sách rỗng!
         