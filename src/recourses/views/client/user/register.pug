include ../mixins/alert.pug
doctype html
head
  title #{title}
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  link(rel='stylesheet' href='https://unicons.iconscout.com/release/v2.1.9/css/unicons.css')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css')
  //- link(rel='stylesheet' href='/css/style.css')
body
  .container
    +alert-danger(2000) 
    h4.pb-3 #{titlePage}
    form(action="/user/register", method= "POST")
      .row
        .col-6
          .form-group
            input.form-control(type='text' name= "firstname" required placeholder='Họ')
        .col-6
          .form-group
            input.form-control(type='text' name="lastname" required placeholder='Tên')
      .form-group
        input.form-control(type='email' name= "email" required placeholder='Email')
      .form-group
        input.form-control(type='text' name= "username" required placeholder='Tên đăng nhập')
      .form-group
        input.form-control(type='password' name= "password" required placeholder='Mật khẩu')
      .form-group
        input.form-control(type='password' name= "repassword" required placeholder='Nhập lại Mật khẩu')
      button.btn.btn-primary.mt-4(type="submit") Đăng kí
      